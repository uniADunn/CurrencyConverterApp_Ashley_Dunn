<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recViewLayout"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingHorizontal="2dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/rcCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:paddingHorizontal="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rcRate"
        />

    <TextView
        android:id="@+id/rcTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="title"
        android:textAlignment="textStart"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcCode"
        app:layout_constraintEnd_toStartOf="@id/imageFlag"
        />

    <TextView
        android:id="@+id/rcRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="rate"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageFlag"
        app:layout_constraintStart_toStartOf="@id/rcTitle"
        app:layout_constraintTop_toBottomOf="@id/rcTitle" />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/imageFlag"
        android:scaleType="centerCrop"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/rcTitle"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
