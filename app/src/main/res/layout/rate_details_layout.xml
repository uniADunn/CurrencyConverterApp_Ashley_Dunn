<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recViewLayout"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingHorizontal="2dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/rcCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:paddingHorizontal="2dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rcRate"
        />

    <TextView
        android:id="@+id/rcTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toTopOf="@id/rcCode"
        app:layout_constraintStart_toEndOf="@id/rcCode"
        app:layout_constraintEnd_toStartOf="@id/imageFlag"
        />
    <TextView
        android:id="@+id/rcRateLbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/rcCode"
        app:layout_constraintTop_toBottomOf="@id/rcTitle"
        app:layout_constraintEnd_toStartOf="@id/rcRate"
        app:layout_constraintBottom_toBottomOf="@id/imageFlag"
        android:text="Current Rate: "
        android:textSize="16sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/rcRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/imageFlag"
        app:layout_constraintEnd_toStartOf="@id/imageFlag"
        app:layout_constraintStart_toEndOf="@id/rcRateLbl"
        app:layout_constraintTop_toBottomOf="@id/rcTitle" />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/imageFlag"
        android:scaleType="centerCrop"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/rcTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/rcExchangeRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_margin="4dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/rcRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/rate_publishedLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginHorizontal="4dp"
        android:text="Currency Last Published: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcExchangeRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rate_published"
        />

    <TextView
        android:id="@+id/rate_published"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginHorizontal="2dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcExchangeRate"
        app:layout_constraintStart_toEndOf="@id/rate_publishedLbl"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>